<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrgRegister">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Organization Registeration"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#673AB7"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext2"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:hint="Phone "
            android:inputType="phone"
            android:maxLength="13"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableTint="#673AB7"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext2"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_margin="1dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@android:drawable/ic_menu_edit"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:drawableTint="#673AB7"
            android:background="#00ffffff"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />


    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext2"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:drawableRight="@android:drawable/ic_dialog_email"
            android:hint="User ID"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableTint="#673AB7"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext2"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:drawableRight="@android:drawable/ic_lock_idle_lock"
            android:hint="Password"
            android:drawableTint="#673AB7"
            android:inputType="textPassword"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext2"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_org"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:hint="Organization name"
            android:inputType="textPersonName"
            android:drawableRight="@android:drawable/ic_lock_idle_lock"
            android:drawableTint="#673AB7"
            android:maxLines="1"
            android:textSize="14dp"
            android:maxLength="50"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:singleLine="true" />


    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textColor="#673AB7"
            android:text="Gender : "/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/r_group">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Male"
                android:drawableTint="#673AB7"
                android:id="@+id/male"
                android:textColor="#673AB7"
                android:textSize="13dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Female"
                android:id="@+id/female"
                android:drawableTint="#673AB7"
                android:textColor="#673AB7"
                android:textSize="13dp"/>
        </RadioGroup>
    </LinearLayout>



    <Button
        android:id="@+id/r_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_rect"
        android:layout_gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#3F51B5"
        android:text="Already have an account! Login Here"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:id="@+id/login"/>




</LinearLayout>